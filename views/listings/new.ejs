<% layout("/layouts/boilerplate") %>

<body>
    <div class="container">
        <br><br>
        <h3 class="text-center mb-4"><b>Create a New Listing</b></h3>
        <form action="/listings/new" method="post" style="max-width: 600px; margin: 0 auto;" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" id="title" name="title" required class="form-control" placeholder="Enter a catchy title">
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a title.</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <textarea id="description" name="description" required class="form-control" placeholder="Describe your listing"></textarea>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a description.</div>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Image:</label>
                <input type="file" id="image" name="image" required class="form-control">
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please select an image.</div>
            </div>

            <div class="mb-3 row">
                <div class="col-md-6 mb-3">
                    <label for="price" class="form-label">Price:</label>
                    <input type="text" id="price" name="price" required class="form-control" placeholder="Enter the price">
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a valid price.</div>
                </div>
                <div class="col-md-6">
                    <label for="country" class="form-label">Country:</label>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="countryDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            Select a country
                        </button>
                        <ul class="dropdown-menu dropdown-menu-country" aria-labelledby="countryDropdown" id="countryOptions">
                            <!-- Options will be dynamically generated by JavaScript -->
                        </ul>
                    </div>
                    <input type="hidden" id="country" name="country"> <!-- This hidden input will store the selected country value -->
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please select a country.</div>
                </div>                
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location:</label>
                <input type="text" id="location" name="location" required class="form-control" placeholder="Enter the location">
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a location.</div>
            </div>
            <br>
            <button type="submit" class="btn btn-dark add-button">Create</button>
        </form>
        <br><br>
    </div>
</body>
</html>
